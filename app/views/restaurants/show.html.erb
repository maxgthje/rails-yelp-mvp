<h2>
  <%= @restaurant.name %>
</h2>

<%= simple_form_for(@restaurant) do |f| %>
<%= f.input :name %>
<%= f.input :address %>
<%= f.input :phone_number %>
<%= f.input :category %>
<% end %>

<p><%= link_to "Add Review", new_restaurant_review_path(@restaurant) %></p>
<p> <%= link_to "List of all Restaurants", restaurants_path %></p>



<ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.content %> | <%= review.rating %>
    <%= link_to "x", review, method: :delete %>
  </li>
  <% end %>
</ul>






